datasource db {
  provider = "sqlite" // ou postgresql, mysql…
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Animal {
  id        Int      @id @default(autoincrement())
  name      String
  weight    Float?
  location  String?
  createdAt DateTime @default(now())
}

model Paddock {
  id        Int       @id @default(autoincrement())
  name      String
  path      Json      // tableau de coordonnées
  createdAt DateTime  @default(now())
}

model Task {
  id          Int      @id @default(autoincrement())
  title       String
  description String?
  status      String   @default("pending")
  dueDate     DateTime?
  createdAt   DateTime @default(now())
}
